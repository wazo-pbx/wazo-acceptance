#!/bin/bash

action=$1
target=$2

usage() {
    cat <<-EOF
    usage : $0 action target
    availables actions:
        backup
        restore
    available targets:
        db
EOF

    exit 0
}

cd /tmp

xivo_backup() {
    case $target in
        db) xivo_backup_db;;
        *) usage;;
    esac
}

xivo_restore() {
    case $target in
        db) xivo_restore_db;;
        *) usage;;
    esac
}

xivo_backup_db() {
    xivo-service stop
    service postgresql restart
    xivo-backup db db
    xivo-service start
}

xivo_restore_db() {
    xivo-service stop
    tar xvf db.tgz -C /tmp
    cd /tmp/pg-backup
    service postgresql restart
    sudo -u postgres dropdb asterisk
    sudo -u postgres pg_restore -C -d postgres asterisk-*.dump
    sudo -u postgres dropdb xivo
    sudo -u postgres pg_restore -C -d postgres xivo-*.dump
    xivo-service start
}

case $action in
    backup)     xivo_backup;;
    restore)    xivo_restore;;
    *)          usage;;
esac
